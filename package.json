{
  "name": "commit-assistant",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "publisher": "commit-assistant",
  "version": "0.0.1",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Extension",
      "program": "${workspaceFolder}/out/extension.js",
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "preLaunchTask": "npm: compile"
    }
  ],
  "engines": {
    "vscode": "^1.100.0"
  },
  "keywords": [
    "git",
    "auto",
    "generate",
    "commit",
    "message",
    "conventional-commit",
    "vs-code",
    "vscode",
    "productivity"
  ],
  "main": "dist/extension.js",
  "l10n": "./dist/package.nls.json",
  "categories": [
    "SCM Providers"
  ],
  "activationEvents": [
    "onCommand:commit-assistant.suggestCommitMessage"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "%configuration.title%",
      "properties": {
        "CommitAssistant.LocalModel": {
          "type": "string",
          "title": "%configuration.CommitAssistant.LocalModel.tile%",
          "description": "%configuration.CommitAssistant.LocalModel.description%",
          "default": ""
        },
        "CommitAssistant.MessageStyle": {
          "type": "string",
          "title": "%configuration.CommitAssistant.MessageStyle.title%",
          "description": "%configuration.CommitAssistant.MessageStyle.description%",
          "default": "default",
          "enum": [
            "default",
            "detailed",
            "draft"
          ],
          "enumDescriptions": [
            "%configuration.MessageStyle.options.default%",
            "%configuration.MessageStyle.options.detailed%",
            "%configuration.MessageStyle.options.draft%"
          ]
        },
        "CommitAssistant.enableNotifications": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.enableNotifications.description%"
        }
      }
    },
    "commands": [
      {
        "command": "commit-assistant.suggestCommitMessage",
        "title": "%commands.suggestCommitMessage%",
        "icon": {
          "dark": "images/icon.dark.svg",
          "light": "images/icon.ligth.svg"
        }
      },
      {
        "command": "commit-assistant.showConfig",
        "title": "%commands.showConfig%"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "commit-assistant.suggestCommitMessage",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ]
    },
    "locales": [
      {
        "languageId": "pt",
        "languageName": "Português",
        "localizedLanguageName": "Português",
        "translations": [
          {
            "id": "configuration.title",
            "path": "./l10n/pt/package.json"
          }
        ]
      },
      {
        "languageId": "en",
        "languageName": "English",
        "localizedLanguageName": "English",
        "translations": [
          {
            "id": "configuration.title",
            "path": "./l10n/en/package.json"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "vscode-nls": "^5.2.0",
    "y": "^0.3.2"
  }
}